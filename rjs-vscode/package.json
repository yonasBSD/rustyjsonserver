{
  "name": "rjs-vscode",
  "displayName": "RJS (rustyjsonserver) Language Support",
  "description": "Syntax highlighting + diagnostics for rjscript via rjs-lsp.",
  "version": "0.0.1",
  "publisher": "your-name-or-org",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:rjscript",
    "onCommand:rjs.restartServer"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "contributes": {
    "languages": [
      {
        "id": "rjscript",
        "aliases": [
          "rjscript"
        ],
        "extensions": [
          ".rjscript"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rjscript",
        "scopeName": "source.rjscript",
        "path": "./syntaxes/rjscript.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "rjs.restartServer",
        "title": "RJS: Restart Language Server"
      }
    ]
  },
  "files": [
    "dist/**",
    "syntaxes/**",
    "language-configuration.json",
    "server/**",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "build:servers": "node scripts/build-servers.js"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
